InputFileVersion = 3

models {
  NumModels = 1

  ModelType = MOLECULAR

  monomers{
    nSpecies = 2
    KuhnLen  = 1. 1.
  }

  chains {
    nChains = 1
    ContourDS = 0.01
    DiffuserMethod = SOS

    chain1{
      Length = 1.0
      nBlocks = 2
      Architecture = linear
      Statistics = gaussian
      BlockSpecies = 1 2
      BlockFractions = 0.5
      Label = abbcp
    }
  }

  model1 {
    cell {
      Dim         = 1
      CellLengths = 4.
      NPW = 32
    }

    interactions {
      chiN12 = 20.
      Compressibility_invzetaN = 0.0
      ApplyCompressibilityConstraint = true
    }

    composition {
      Ensemble = canonical
      ChainVolFrac = 1.0
    }

    operators{
      CalcHamiltonian       = true
      CalcPressure          = false
      CalcStressTensor      = true
      CalcChemicalPotential = false
      CalcStructureFactor   = false
      IncludeIdealGasTerms  = true
    }

    initfields{
      ReadInputFields = false
      InitField1{
        InitType = SIN1
        InitParameters = 1.0
      }
      InitField2{
        InitType = SIN1
        InitParameters = -1.0
      }
    }

  } # end common
} # end models



simulation{
  JobType = SCFT

  FieldUpdater = SIS

  NumTimeStepsPerBlock = 50
  NumBlocks = 5000

  TimeStepDT = 1.0
  lambdaForceScale = 1.0 1.0

  randomseed = 0 # =0 => autoset from clock

  SCFTForceStoppingTol  = 1e-6

  VariableCell    = false

  IO{
    OutputFields       = true
    OutputDensityFields = true
    FieldOutputSpace   = kspace # rspace, kspace, or both
    OutputFormattedFields = true
  }
}



parallel{
  CUDA_selectdevice = -1
  CUDA_threadblocksize = 128
  CUDA_memorysaving = false
  CUDA_RNGonCPU = false

  OpenMP_nthreads = 1
}
